{
  "name": "lex-ssg-migration",
  "version": "1.0.0",
  "description": "WordPress to Eleventy migration for lex.virtual-efficiency.nl",
  "type": "commonjs",
  "scripts": {
    "dev": "eleventy --serve --watch",
    "build": "eleventy",
    "clean": "rm -rf _site",
    "capture:baseline": "node scripts/capture-screenshots.js --base-url=http://localhost:8080 --output-dir=comparison/baseline",
    "capture:current": "node scripts/capture-screenshots.js --base-url=http://localhost:8080 --output-dir=comparison/current",
    "compare": "node scripts/compare-screenshots.js",
    "report": "node scripts/generate-report.js",
    "test:visual": "npm run compare && npm run report"
  },
  "keywords": [
    "eleventy",
    "static-site",
    "migration",
    "wordpress"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "playwright": "^1.40.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0"
  },
  "dependencies": {
    "markdown-it": "^14.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
